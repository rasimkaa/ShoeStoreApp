<Window x:Class="ShoeStoreApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ООО «Обувь» - Список товаров"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логотипом и ФИО -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Resources/icon.png" Height="40" Width="40" 
                           Margin="0,0,10,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="ООО «Обувь»" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="TxtUserInfo" 
                               Text="Гость" 
                               FontSize="14" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>

                    <Button x:Name="BtnOrders" 
                            Content="Заказы" 
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            Padding="15,5"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="BtnOrders_Click"
                            Visibility="Collapsed"/>

                    <Button Content="Выход" 
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            Padding="15,5"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel x:Name="PanelFilters" Orientation="Horizontal">
                <TextBlock Text="Поиск:" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="Collapsed"/>
                <TextBox x:Name="TxtSearch" 
                         FontSize="14"
                         Padding="10,8"
                         Width="300"
                         VerticalAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"
                         Visibility="Collapsed"/>

                <TextBlock Text="Сортировка:" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="CmbSort" 
                          Width="200"
                          FontSize="14"
                          SelectionChanged="CmbSort_SelectionChanged"
                          Visibility="Collapsed">
                    <ComboBoxItem Content="По умолчанию" IsSelected="True"/>
                    <ComboBoxItem Content="По цене (возрастание)"/>
                    <ComboBoxItem Content="По цене (убывание)"/>
                    <ComboBoxItem Content="По наименованию (А-Я)"/>
                    <ComboBoxItem Content="По наименованию (Я-А)"/>
                </ComboBox>

                <TextBlock Text="Фильтр:" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="CmbFilter" 
                          Width="200"
                          FontSize="14"
                          SelectionChanged="CmbFilter_SelectionChanged"
                          Visibility="Collapsed">
                    <ComboBoxItem Content="Все товары" IsSelected="True"/>
                    <ComboBoxItem Content="Товары в наличии"/>
                    <ComboBoxItem Content="Товары со скидкой"/>
                    <ComboBoxItem Content="Товары без скидки"/>
                </ComboBox>

                <Button x:Name="BtnAddProduct"
                        Content="+ Добавить товар"
                        Margin="20,0,0,0"
                        Padding="15,8"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnAddProduct_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsList" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" 
                                Padding="15" 
                                CornerRadius="8" 
                                Width="350"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                            <Setter Property="Background" Value="#ADD8E6"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasHighDiscount}" Value="True">
                                            <Setter Property="Background" Value="#90EE90"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Фото товара -->
                                <Border Grid.Row="0" 
                                        Height="200" 
                                        Background="#F0F0F0"
                                        CornerRadius="5"
                                        Margin="0,0,0,10">
                                    <Image Source="{Binding PhotoPath}" 
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding ProductName}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>

                                    <TextBlock FontSize="13" Foreground="#666">
                                        <Run Text="Категория: "/>
                                        <Run Text="{Binding CategoryName}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock FontSize="13" Foreground="#666">
                                        <Run Text="Производитель: "/>
                                        <Run Text="{Binding ManufacturerName}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock FontSize="13" Foreground="#666">
                                        <Run Text="Поставщик: "/>
                                        <Run Text="{Binding SupplierName}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="#888"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Цена и наличие -->
                                <StackPanel Grid.Row="2">
                                    <Border Background="#F5F5F5" 
                                            Padding="10" 
                                            CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="Цена: " 
                                                           FontSize="14" 
                                                           VerticalAlignment="Center"/>

                                                <TextBlock FontSize="14"
                                                           Foreground="Red"
                                                           VerticalAlignment="Center"
                                                           TextDecorations="Strikethrough"
                                                           Text="{Binding PriceFormatted}"
                                                           Visibility="{Binding HasDiscountVisibility}"/>

                                                <TextBlock FontSize="16" 
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0,0,0"
                                                           Text="{Binding FinalPriceFormatted}"/>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1" 
                                                       FontSize="13"
                                                       Foreground="#FF6600"
                                                       FontWeight="Bold"
                                                       Margin="0,2,0,0"
                                                       Text="{Binding DiscountFormatted}"
                                                       Visibility="{Binding HasDiscountVisibility}"/>

                                            <TextBlock Grid.Row="2" 
                                                       FontSize="13" 
                                                       Margin="0,5,0,0"
                                                       Text="{Binding StockFormatted}"
                                                       Foreground="{Binding StockColor}"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>