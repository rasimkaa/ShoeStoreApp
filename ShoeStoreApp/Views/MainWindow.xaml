<Window x:Class="ShoeStoreApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Магазин обуви - Список товаров"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#FFFFFF"
        FontFamily="Times New Roman"
        Icon="/Resources/Icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логотипом и ФИО -->
        <Border Grid.Row="0" Background="#7FFF00" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Resources/icon.png" Height="60" Width="60" 
                           Margin="0,0,15,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Магазин обуви" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#000000"
                               VerticalAlignment="Center"
                               FontFamily="Times New Roman"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="TxtUserInfo" 
                               Text="Гость" 
                               FontSize="16" 
                               Foreground="#000000"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"
                               FontFamily="Times New Roman"/>

                    <Button x:Name="BtnOrders" 
                            Content="Заказы" 
                            Background="#00FA9A"
                            Foreground="#000000"
                            FontSize="14"
                            FontFamily="Times New Roman"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="BtnOrders_Click"
                            Visibility="Collapsed"/>

                    <Button Content="Выход" 
                            Background="#00FA9A"
                            Foreground="#000000"
                            FontSize="14"
                            FontFamily="Times New Roman"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" Background="#7FFF00" Padding="15" Margin="0,2,0,2">
            <StackPanel x:Name="PanelFilters" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Поиск:" 
                           FontSize="14" 
                           FontFamily="Times New Roman"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="Collapsed"/>
                <TextBox x:Name="TxtSearch" 
                         FontSize="14"
                         FontFamily="Times New Roman"
                         Padding="10,8"
                         Width="250"
                         VerticalAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"
                         Visibility="Collapsed"/>

                <TextBlock Text="Сортировка:" 
                           FontSize="14"
                           FontFamily="Times New Roman"
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="CmbSort" 
                          Width="200"
                          FontSize="14"
                          FontFamily="Times New Roman"
                          SelectionChanged="CmbSort_SelectionChanged"
                          Visibility="Collapsed">
                    <ComboBoxItem Content="По умолчанию" IsSelected="True"/>
                    <ComboBoxItem Content="По цене (возрастание)"/>
                    <ComboBoxItem Content="По цене (убывание)"/>
                    <ComboBoxItem Content="По наименованию (А-Я)"/>
                    <ComboBoxItem Content="По наименованию (Я-А)"/>
                </ComboBox>

                <TextBlock Text="Фильтр:" 
                           FontSize="14"
                           FontFamily="Times New Roman"
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"
                           Visibility="Collapsed"/>
                <ComboBox x:Name="CmbFilter" 
                          Width="200"
                          FontSize="14"
                          FontFamily="Times New Roman"
                          SelectionChanged="CmbFilter_SelectionChanged"
                          Visibility="Collapsed">
                    <ComboBoxItem Content="Все товары" IsSelected="True"/>
                    <ComboBoxItem Content="Товары в наличии"/>
                    <ComboBoxItem Content="Товары со скидкой"/>
                    <ComboBoxItem Content="Товары без скидки"/>
                </ComboBox>

                <Button x:Name="BtnAddProduct"
                        Content="+ Добавить товар"
                        Margin="20,0,0,0"
                        Padding="15,8"
                        Background="#00FA9A"
                        Foreground="#000000"
                        FontFamily="Times New Roman"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnAddProduct_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="#FFFFFF">
            <ItemsControl x:Name="ProductsList" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,10" 
                                Padding="0" 
                                Height="180"
                                BorderThickness="2"
                                BorderBrush="#000000"
                                Background="#FFFFFF">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasHighDiscount}" Value="True">
                                            <Setter Property="Background" Value="#2E8B57"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фото товара слева -->
                                <Border Grid.Column="0" 
                                        Background="#F5F5F5"
                                        BorderBrush="#000000"
                                        BorderThickness="0,0,1,0"
                                        Margin="0">
                                    <Image Source="{Binding PhotoPath}" 
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Margin="15"/>
                                </Border>

                                <!-- Информация о товаре в центре -->
                                <StackPanel Grid.Column="1" Margin="15,10" VerticalAlignment="Top">
                                    <!-- Категория товара | Наименование товара -->
                                    <TextBlock FontSize="14" 
                                               FontFamily="Times New Roman"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5">
                                        <Run Text="{Binding CategoryName}"/>
                                        <Run Text=" | "/>
                                        <Run Text="Ботинки"/>
                                    </TextBlock>

                                    <!-- Описание товара -->
                                    <TextBlock FontSize="13" 
                                               FontFamily="Times New Roman"
                                               Foreground="#000000"
                                               Margin="0,0,0,3">
                                        <Run Text="Описание товара:"/>
                                        <LineBreak/>
                                        <Run Text="{Binding ProductName}"/>
                                    </TextBlock>

                                    <!-- Производитель -->
                                    <TextBlock FontSize="13" 
                                               FontFamily="Times New Roman"
                                               Foreground="#000000"
                                               Margin="0,0,0,3">
                                        <Run Text="Производитель:"/>
                                        <LineBreak/>
                                        <Run Text="{Binding ManufacturerName}"/>
                                    </TextBlock>

                                    <!-- Поставщик -->
                                    <TextBlock FontSize="13" 
                                               FontFamily="Times New Roman"
                                               Foreground="#000000"
                                               Margin="0,0,0,3">
                                        <Run Text="Поставщик:"/>
                                        <LineBreak/>
                                        <Run Text="{Binding SupplierName}"/>
                                    </TextBlock>

                                    <!-- Цена -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock FontSize="13" 
                                                   FontFamily="Times New Roman"
                                                   Foreground="#000000"
                                                   Text="Цена:"
                                                   Margin="0,0,5,0"/>

                                        <!-- Старая цена зачеркнутая -->
                                        <TextBlock FontSize="13"
                                                   FontFamily="Times New Roman"
                                                   Foreground="Red"
                                                   TextDecorations="Strikethrough"
                                                   Text="{Binding PriceFormatted}"
                                                   Margin="0,0,5,0"
                                                   Visibility="{Binding HasDiscountVisibility}"/>

                                        <!-- Новая цена -->
                                        <TextBlock FontSize="13" 
                                                   FontFamily="Times New Roman"
                                                   FontWeight="Bold"
                                                   Foreground="#000000"
                                                   Text="{Binding FinalPriceFormatted}"/>
                                    </StackPanel>

                                    <!-- Единица измерения -->
                                    <TextBlock FontSize="13" 
                                               FontFamily="Times New Roman"
                                               Foreground="#000000"
                                               Margin="0,0,0,3">
                                        <Run Text="Единица измерения:"/>
                                        <LineBreak/>
                                        <Run Text="{Binding UnitName}"/>
                                    </TextBlock>

                                    <!-- Количество на складе -->
                                    <TextBlock FontSize="13" 
                                               FontFamily="Times New Roman"
                                               Foreground="#000000">
                                        <Run Text="Количество на складе:"/>
                                        <LineBreak/>
                                        <Run Text="{Binding QuantityInStock}"/>
                                        <Run Text=" шт"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Правая колонка только со скидкой -->
                                <Border Grid.Column="2" 
                                        BorderBrush="#000000"
                                        BorderThickness="1,0,0,0"
                                        Padding="5">
                                    <Border Background="#00FA9A"
                                            CornerRadius="20"
                                            Padding="15,10"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Visibility="{Binding HasDiscountVisibility}">
                                        <TextBlock FontSize="22"
                                                   FontFamily="Times New Roman"
                                                   FontWeight="Bold"
                                                   Foreground="#000000"
                                                   Text="{Binding DiscountBadge}"/>
                                    </Border>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
