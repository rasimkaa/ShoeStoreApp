<Window x:Class="ShoeStoreApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Магазин обуви"
        Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFFFF"
        FontFamily="Times New Roman"
        Icon="/Resources/Icon.ico">

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#7FFF00" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <Image Source="/Resources/icon.png" Height="80" Width="80" 
                       Margin="0,0,0,10"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="ООО «Обувь»" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#FFFFFF" 
                Margin="20" 
                Padding="30"
                CornerRadius="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#000000"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"/>

                <TextBlock Text="Логин:" FontSize="14" Foreground="#000000" Margin="0,5,0,2" FontFamily="Times New Roman"/>
                <TextBox x:Name="TxtLogin" 
                         FontSize="14"
                         FontFamily="Times New Roman"
                         Padding="10,8"
                         Margin="0,5"/>

                <TextBlock Text="Пароль:" FontSize="14" Foreground="#000000" Margin="0,15,0,2" FontFamily="Times New Roman"/>
                <PasswordBox x:Name="TxtPassword" 
                             FontSize="14"
                             FontFamily="Times New Roman"
                             Padding="10,8"
                             Margin="0,5"
                             PasswordChar="●"/>

                <TextBlock x:Name="TxtError" 
                           Text="" 
                           Foreground="Red" 
                           FontSize="12"
                           FontFamily="Times New Roman"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

                <Button Content="Войти" 
                        Background="#00FA9A"
                        Foreground="#000000"
                        FontSize="14"
                        FontFamily="Times New Roman"
                        FontWeight="Bold"
                        Padding="10,8"
                        Margin="0,20,0,10"
                        Height="40"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnLogin_Click"/>

                <Button Content="Продолжить как гость" 
                        Background="#7FFF00"
                        Foreground="#000000"
                        FontSize="14"
                        FontFamily="Times New Roman"
                        FontWeight="Bold"
                        Padding="10,8"
                        Height="40"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnGuest_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
