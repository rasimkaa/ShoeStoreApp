<Window x:Class="ShoeStoreApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Магазин обуви"
        Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <Image Source="/Resources/icon.png" Height="80" Width="80" 
                       Margin="0,0,0,10"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="ООО «Обувь»" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" 
                Margin="20" 
                Padding="30"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Логин:" FontSize="14" Foreground="#666666" Margin="0,5,0,2"/>
                <TextBox x:Name="TxtLogin" 
                         FontSize="14"
                         Padding="10,8"
                         Margin="0,5"/>

                <TextBlock Text="Пароль:" FontSize="14" Foreground="#666666" Margin="0,15,0,2"/>
                <PasswordBox x:Name="TxtPassword" 
                             FontSize="14"
                             Padding="10,8"
                             Margin="0,5"
                             PasswordChar="●"/>

                <TextBlock x:Name="TxtError" 
                           Text="" 
                           Foreground="Red" 
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

                <Button Content="Войти" 
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        Padding="10,8"
                        Margin="0,20,0,10"
                        Height="40"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnLogin_Click"/>

                <Button Content="Продолжить как гость" 
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        Padding="10,8"
                        Height="40"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnGuest_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
